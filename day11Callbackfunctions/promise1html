  <body>
    <h1 id="d1"></h1>
    <script>
      function display1(value) {
        document.getElementById("d1").innerHTML = value;
      }
      let mypromoise = new Promise(function (myResolve, myReject) {
        let val1 = 0;
        val1 = 6 - 1;
        if (val1 == 0) {
          myResolve("ok");
        } else {
          myReject("Error");
        }
      });
      mypromise.then(
        function (message) {
          display1(message);
        },
        function (error) {
          display1(error);
        }
      );
    </script>
  </body>
